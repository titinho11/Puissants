    </div>

  </div>

{% endblock %}

{% block javascript %}
      {{parent()}}
      {% javascripts filter='jsqueeze'
        'bundles/gpplatform/assets/js/imagesloaded.pkgd.min.js'
        'bundles/gpplatform/assets/bootstrap/js/bootstrap.bundle.min.js'
        'bundles/gpplatform/assets/js/jquery.validate.min.js'
        'bundles/gpplatform/assets/js/additional-methods.min.js'
        'bundles/gpplatform/assets/js/navigation.min.js'
        'bundles/gpplatform/assets/js/main.js'
        'bundles/gpplatform/assets/js/custom.js'
        'bundles/gpplatform/js/custom.js'
       %}
          <script type="text/javascript" src="{{ asset_url }}"></script>
     {% endjavascripts %}
{% endblock %}
