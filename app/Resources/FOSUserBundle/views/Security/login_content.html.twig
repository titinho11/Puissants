{% trans_default_domain 'FOSUserBundle' %}

<header id="home" class="section pb-0 ">

    <div class="header-text section text-white text-center pb-3 pt-0">

    </div>

</header>

<div class="limiter">
  <div class="container-login100">
    <div class="wrap-login100 p-t-50 p-b-20">
        <form action="{{ path("fos_user_security_check") }}" method="post">

            {% if csrf_token %}
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
            {% endif %}
            <span class="login100-form-avatar">
              <img src="{{asset('bundles/app/login/images/avatar4.png')}}" alt="AVATAR">
            </span>

            {% if error %}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
              <strong>{{ error.messageKey|trans(error.messageData, 'security') }}</strong>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
            {% endif %}

            <div class="wrap-input100 validate-input m-t-30 m-b-35" data-validate = "Enter username">
              <input type="text" id="username" name="_username" required="required" class="input100"/>
              <span class="focus-input100" data-placeholder="Username"></span>
            </div>

            <div class="wrap-input100 validate-input m-b-50" data-validate="Enter password">
              <input class="input100" type="password" id="password" name="_password" required="required"/>
              <span class="focus-input100" data-placeholder="Password"></span>
            </div>

            <div class="m-b-20">
              <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
              <label for="remember_me">Se souvenir de moi</label>
            </div>

            <div class="container-login100-form-btn">
              <input class="login100-form-btn" type="submit" id="_submit" name="_submit" value="Connexion">

            </div>

            <ul class="login-more p-t-60">
              <li class="m-b-8">
                <span class="txt1">
                  Mot de passe oublié ?
                </span>

                <a href="{{ path('fos_user_resetting_request') }}" class="txt2">
                  Cliquez ici pour le récupérer
                </a>
              </li>

              <li>
                <span class="txt1">
                  Pas encore membre ?
                </span>

                <a href="{{ path('fos_user_registration_register') }}" class="txt2">
                  Je m'inscris
                </a>
              </li>
            </ul>


        </form>
      </div>
    </div>
</div>
