{% trans_default_domain 'FOSUserBundle' %}

<div class="container-fluid">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <span class="login100-form-title login100-form-title-request-email p-t-130 p-b-60">
                  Entrez l'e-mail associé à votre compte pour recevoir le lien.
      </span>
    </div>

  </div>
</div>

<div class="container-fluid">
    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
        <div class="row justify-content-center">
          <div class="col-sm-6 justify-content-center p-b-60">

              <input type="email" class="form-control" id="exampleFormControlInput1" placeholder="Exemple : john@educ-puissants.com" id="username" name="username" required="required" />
          </div>
        </div>


          <div class="row justify-content-center m-b-60">
            <div class="container-login100-form-btn col-sm-6">
                <input class="login100-form-btn" type="submit" value="Envoyer un e-mail à l'adresse renseignée" />
            </div>
          </div>
    </form>

</div>
